<?xml version="1.0"?>
<launch>
    <!-- 
        The robot can be controlled either through CAN bus or UART port. Make sure the hardware
        interface is set up correctly before attempting to connect to the robot.
        * CAN bus: 500k
        * UART: 115200, Parity None, 8-bit Data, 1 Stop Bit 
    -->
    <param name="use_sim_time" value="false"/>
    <arg name="port_name" default="can0" />
    <arg name="simulated_robot" default="false" />
    <arg name="publish_tf" default="true" />

    <!--启动小车底盘驱动-->
    <include file="$(find hunter_base)/launch/hunter_base.launch" />	
     
    <!-- 运行激光雷达驱动 -->
    <include file="$(find rslidar_sdk)/launch/rslidar_32.launch" />	
	    
    <!-- 运行3D点云数据转2D激光数据 -->
    <include file="$(find pointcloud_to_laserscan)/launch/pointcloud_to_laserscan.launch"/>

    <!-- 启动tf坐标转换 -->
    <include file="$(find transformer_tf)/launch/tf_tranformer.launch"/>
        <node name="odomtransform" pkg="odomtransform" type="ot" output="log" >

        </node>

    <!--启动3D定位节点 -->
    <nclude file="$(find sonic_localization)/launch/localization_0807.launch"/>

    <!-- 启动海康摄像头 -->
    <!--include file="$(find hikvision_ros)/launch/hik.launch"/-->

    <!-- 运行move_base节点 -->
    <include file="$(find mrobot_navigation)/launch/move_base.launch" />

    <!-- 设置一个/odom与/map之间的静态坐标变换 -->
    <!--node pkg="tf" type="static_transform_publisher" name="map_odom_broadcaster" args="0 0 0 0 0 0 /map /odom 100" /-->

    <!-- 设置一个/base_link与/map之间的静态坐标变换 -->
    <!--node pkg="tf" type="static_transform_publisher" name="map_base_link_broadcaster" args="0 0 0 0 0 0 /map /base_link 100" /-->

    <!-- 设置一个/base_link与/lidar之间的静态坐标变换 -->
    <!--node pkg="tf" type="static_transform_publisher" name="map_odom_broadcaster" args="0 0 0 0 0 0 /base_link /lidar 100" /-->

    <!-- 运行rviz -->
	<node name="rviz" pkg="rviz" type="rviz" args="-d $(find teb_local_planner_tutorials)/cfg/rviz_navigation_pp.rviz" output="log"/>

    <!-- 运行自主导航节点 -->
    <!-- include file="$(find teb_local_planner_tutorials)/launch/xunji_car.launch" / -->
</launch>
